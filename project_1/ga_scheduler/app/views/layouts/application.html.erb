<!DOCTYPE html>
<html>
<head>
  <title>GaScheduler</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "dialog","fullcalendar","jquery-ui","style" %>
  <%= javascript_include_tag "jrails1/fullcalendar.js","jrails1/jquery- ui.js","jrails1/gcal.js","jrails1/jrails.js","jrails1/jquery.validate.js"%>
</head>
<body>

  <% if current_user %>
   <p> hello, <%= current_user.email %> </p>
  <%= link_to 'Logout', logout_path, method: :delete %>
  <% else %>
   <%= link_to 'login', login_path %> |
   <%= link_to 'Sign Up', new_user_path %>

  <% end %>

  <% flash.each do |name, message| %>
    <div class="flash-message flash-message-<%= name %>">
     <%= message %>
    </div>
   <% end %>
  <div class="header">
    <%=image_tag("General assembly header.png", alt: "GA logo")%>
  </div>

  <p class="menu">
  <%= link_to 'Home', courses_path %> | 
  <%= link_to 'Students', students_path %> | 
  <%= link_to 'Instructors', instructors_path %> |
  <%= link_to 'Producers', producers_path %> |
  <%= link_to 'Courses', courses_path %> | 
  <%= link_to 'Programs', programs_path %> | 
  <%= link_to 'Topics', topics_path %> |
  <%= link_to 'Formats', formats_path %> |
  <%= link_to 'Classrooms', classrooms_path %> |
  <%= link_to 'Locations', locations_path %> |
  </p>

<%= yield %>

</body>
</html>
